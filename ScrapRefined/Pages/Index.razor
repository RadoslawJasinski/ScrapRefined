@page "/"
@using ScrapRefined.ViewModels
@inject IndexViewModel indexVM

<div class="container-fluid d-flex flex-column vh-100" style="background-color:#e0e0e0">
    <div class=" container">
        <div class="col">
            <div class="row mt-3">
                <div class="d-flex">
                    <div class="p-0 flex-grow-1">
                        <div class="form-outline">
                        <input type="search" id="form1" class="form-control" />
                        
                    </div>
                    </div>
                    <div class="p-0">
                        <button type="button" class="btn btn-primary" style="background-color:#1f6a53; border-color:#e0e0e0">
                            <i class="bi bi-search fs-6" style="color:#e0e0e0"></i>
                        </button>
                    </div>
                </div>
                </div>
            <div class="row">
               
            </div>
        </div>
    </div>
</div>


@code{
    protected override async Task OnInitializedAsync()
    {
        await indexVM.LoadProducts();
    }
}